                    <persName xml:id="name1251-2" xml:lang="en" syriaca-tags="#syriaca-headword">Golinduch</persName>
                    <persName xml:id="name1251-3" xml:lang="fr-x-fiey" source="#bib1251-1">GOLINDOUCH</persName>
                    <idno type="URI">http://syriaca.org/person/1251</idno>
