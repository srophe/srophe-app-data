                    <persName xml:id="name1093-3" xml:lang="fr-x-fiey" source="#bib1093-1">ĀBĀÏ</persName>
                    <idno type="URI">http://syriaca.org/person/1093</idno>
                    <idno type="FIEY">4</idno>
                    <idno type="BHS">596</idno>
