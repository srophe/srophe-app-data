            <listPerson>
                <person xml:id="saint-2050" ana="#syriaca-saint">
                    <persName xml:id="name2050-1" xml:lang="syr" syriaca-tags="#syriaca-headword" source="#bib2050-1">ܣܒܪܝܫܘܥ</persName>
                    <persName xml:id="name2050-2" xml:lang="en-x-gedsh">Sabrīshōʿ</persName>
                    <persName xml:id="name2050-3" xml:lang="en" resp="http://syriaca.org" syriaca-tags="#syriaca-headword">Sabrishoʿ of Beth Qoqa</persName>
                    <persName xml:id="name2050-4" xml:lang="fr-x-zanetti" source="#bib2050-1">Saḇrīšōʾ</persName>
                    <persName xml:id="name2050-5" xml:lang="fr" source="#bib2050-1">Sabrisho‘ de Beth Qoqa</persName>
                    <idno type="URI">http://syriaca.org/person/2050</idno>
                    <note type="abstract" xml:id="abstract-en-2050">
                        <persName ref="http://syriaca.org/person/2050">Sabrishoʿ of Beth Qoqa</persName> is
          commemorated as the founder of <placeName ref="http://syriaca.org/place/611">Beth
            Qoqa</placeName>, southwest of <placeName ref="http://syriaca.org/place/13">Arbela</placeName>. Among his disciples was <persName ref="http://syriaca.org/person/1377">Michael of Tarʿil</persName>.</note>
                    <event type="attestation" xml:id="attestation2050-1" source="#bib2050-1">
                        <p xml:lang="en">Sabrīshōʿ is commemorated in <title ref="http://syriaca.org/work/1794">Sabrisho‘ of Beth Qoqa (text)</title>.</p>
                    </event>
                    <event type="attestation" xml:id="attestation2050-2" source="#bib2050-1">
                        <p xml:lang="en">Sabrīshōʿ is commemorated in <title ref="http://syriaca.org/work/1208">Sabrisho of Beth Qoqa (text)</title>.</p>
                    </event>
                    <event type="attestation" xml:id="attestation2050-3" source="#bib2050-1">
                        <p xml:lang="en">Sabrīshōʿ is commemorated in <title ref="http://syriaca.org/work/1377">Sabrisho of Beth Qoqa (text)</title>.</p>
                    </event>
                    <event type="attestation" xml:id="attestation2050-4" source="#bib2050-1">
                        <p xml:lang="en">Sabrīshōʿ is commemorated in <title ref="http://syriaca.org/work/1575">Sabrîsho‘ of Beth Qoqa (text)</title>.</p>
                    </event>
                    <event type="attestation" xml:id="attestation2050-5" source="#bib2050-1">
                        <p xml:lang="en">Sabrīshōʿ is commemorated in <title ref="http://syriaca.org/work/1999">The Monks of the Monastery of Mar Sabrishoʿ of Beth Qoqa (text)</title>.</p>
